    "monitors":[
        {
            "name":"Apache TCP",
            "schedule": "*/1 * * * * *",
            "details": {
                "type": "tcp",
                "host": "127.0.0.1",
                "port": 80
            }
        },
        {
            "name":"Netbios TCP",
            "schedule": "*/1 * * * * *",
            "details": {
                "type": "tcp",
                "host": "127.0.0.1",
                "port": 139
            }
        },
        {
            "name":"Apache Http",
            "schedule": "*/1 * * * * *",
            "details": {
                "type": "http",
                "url": "http://localhost",
                "method": "get"
            }
        },
        {
            "name":"Systemctl memcached",
            "schedule": "*/1 * * * * *",
            "details": {
                "type": "command",
                "command": "systemctl",
                "args": ["show", "memcached.service", "--property=ActiveState"],
                "expected": "ActiveState=active\n"
            }
        },
        {
            "name":"Loadavg",
            "schedule": "*/1 * * * * *",
            "details": {
                "type": "loadAvg",
                "threshold1min": 2.0,
                "threshold5min": 2.0,
                "threshold10min": 2.0,
                "storeValues": true
            }
        },
        {
            "name":"Mem",
            "schedule": "*/1 * * * * *",
            "details": {
                "type": "mem",
                "maxPercentageMemUsed": 2.0,
                "maxPercentageSwapUsed": 2.0,
                "storeValues": true
            }
        },
        {
            "name":"Systemctl",
            "schedule": "*/1 * * * * *",
            "details": {
                "type": "systemctl",
                "active": ["uuidd", "ssh"],
                "storeValues": true
            }
        },
        {
            "name":"Database postgres",
            "schedule": "*/1 * * * * *",
            "details": {
                "type": "database",
                "maxQueryTime": 30,
